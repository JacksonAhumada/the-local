<html lang='en'>

  <head>
    <meta charset='UTF-8' />
    <meta name='viewport' content='width=device-width, initial-scale=1.0' />
    <title>The Local</title>
    <!--Import Google Icon Font-->
    <!--Import materialize.css-->
    <link
      type='text/css'
      rel='stylesheet'
      href='https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/css/materialize.min.css'
      media='screen,projection'
    />
    <link
      href='https://fonts.googleapis.com/icon?family=Material+Icons'
      rel='stylesheet'
    />

    <!--Let browser know website is optimized for mobile-->
    <meta name='viewport' content='width=device-width, initial-scale=1.0' />

  </head>

  <body class='blue darken-2'>
    <div>
      <header class=''>
        <h1>

          <a href='/' class='blue-text text-lighten-4'>The Local</a>
        </h1>
        <nav class='indigo darken-4'>
          <div class='nav-wrapper'>
            <!-- Conditionally render login or logout links -->
            {{#if logged_in}}
              <a href='/profile'>profile</a>
              |
              <button class='' id='logout'>logout</button>
            {{else}}
              <a href='/login'>login</a>
            {{/if}}
          </div>
        </nav>
      </header>
      <main class=''>
        <!-- Render the sub layout -->
        {{{body}}}
      </main>
      <footer>

      </footer>
    </div>

    <!-- Render script for logged in users only -->
    {{#if logged_in}}
      <script src='/js/logout.js'></script>
    {{/if}}
  </body>

</html>
<script src='/js/materialize.js'></script>
<!-- Compiled and minified JavaScript -->
<script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js"></script>